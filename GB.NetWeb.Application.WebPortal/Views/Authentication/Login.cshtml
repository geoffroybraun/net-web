@model LoginViewModel

@{
    ViewData["Title"] = Resources.Login;
}

<div class="col-4 offset-6 jumbotron" style="margin-top: 20%">
    <h1>@Resources.MainTitle</h1>

    <form method="post" asp-controller="Authentication" asp-action="Login">
        <div class="form-group text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Query.Email">@Resources.Email <span class="text-danger">*</span></label>
            <input type="email" class="form-control" placeholder="@Resources.Email" asp-for="Query.Email" />
            <span class="text-warning" asp-validation-for="Query.Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Query.Password">@Resources.Password <span class="text-danger">*</span></label>
            <input type="password" class="form-control" placeholder="@Resources.Password" asp-for="Query.Password" />
            <span class="text-warning" asp-validation-for="Query.Password"></span>
        </div>

        <button type="submit" class="btn btn-primary"> <i class="fa fa-sign-in-alt"></i> @Resources.Login</button>
    </form>
</div>
